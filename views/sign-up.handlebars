<div class="card">
    <div class="card-header">
        <h2 class="pink-text text-lighten-4 center-align" >Sign Up</h2>
    </div>
    <div class="row center-align">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
        <div class="center-align">
           <button type="submit" id="login-btn" class="medium btn waves-effect blue lighten-3 hoverable">
            <i class="small material-icons">pets</i>Sign Up</button>
            <br></br>
            <a href="/login">Login instead</a>
            </div>
      </form>
  </div>
    
</div>


<script src="/public/js/sign-up.js"></script>